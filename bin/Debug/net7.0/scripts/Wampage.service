[Unit]
Description=Wampage Server Service
After=network-online.target
Wants=network-online.target
[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/server
ExecStart=/bin/bash /home/ubuntu/server/scripts/runserver.sh
Restart=on-failure
RestartSec=5s
#Allow WampageServer to bind to port 80 and 443
ExecStartPre=sudo /usr/sbin/setcap CAP_NET_BIND_SERVICE=+eip /home/ubuntu/server/Wampage.Server
[Install]
WantedBy=multi-user.target

